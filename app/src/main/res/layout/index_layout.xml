<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:id="@+id/index_upspace"
            android:layout_width="match_parent"
            android:layout_height="70dp" />
        <Space
            android:id="@+id/index_leftspace"
            android:layout_width="90dp"
            android:layout_height="200dp" />
        <com.test.StepCounter.CircleProgressView
            android:id="@+id/CPV"
            android:layout_below="@id/index_upspace"
            android:layout_toRightOf="@id/index_leftspace"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_below="@id/CPV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <Button
                android:id="@+id/plusonestep"
                android:layout_below="@id/CPV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="+1s"
                android:textSize="30sp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
